{# templates/admin/index.html.twig #}

{% extends "base-admin.html.twig" %}

{% block title %}Admin. | {{ parent() }}{% endblock %}

{% block content %}
    <div class="container  border-danger border-top border-bottom">
        <nav class="nav-bijoux mt-3">
            <div> 
                <ul class="d-flex justify-content-between">
                    <li><a class="nav-link text-dark" href="#article">Article</a></li>					
                    <li><a class="nav-link text-dark" href="/commande">Commande</a></li>
                    <li><a class="nav-link text-dark" href="#utilisateur">Utilisateur</a></li>                   
                </ul>
            </div>
        </nav>		
	</div>

    <div class="admin-page mt-5">
        <div class="container">
            <div class="row" id="article">
                <div class="col s12">
                    <a href="{{ path('article_add') }}" class="btn btn blue darken-4" style="float: right"><span class="text-primary ">Ajouter</a>
                    <h5 class="text-primary">Articles</h5>
                    <table class="mt-3 table-article">
                        <tr>
                            <th>#</th>
                            <th>Titre</th>
                            <th>Publier</th>
                            <th>Date de publication</th>
                            <th>Date de modification</th>
                            <th>Actions</th>
                        </tr>
                       
                        {% set i = 1 %}
                        {% for article in articles %}
                        
                            <tr>
                                <td>{{ i }}</td>
                                <td><a href="{{ path('article_show', {'id': article.id}) }}" target="_blank">{{ article.title }}</a></td>
                                <td>
                                    <span class="badge {{ article.isPublished ? 'blue' : 'red' }}">
                                        {{ article.isPublished ? 'oui' : 'non' }}
                                    </span>
                                </td>
                                <td>{{ article.isPublished ? article.publicationDate|date('d/m/Y') : '-' }}</td>
                                <td>{{ article.lastUpdateDate|date('d/m/Y') }}</td>
                                <td>
                                    <a href="{{ path('article_edit', {'id': article.id}) }}"><i class="material-icons blue-text">Modifier</i></a>
                                    <a href="{{ path('article_remove', {'id': article.id}) }}"><i class="material-icons red-text">Supprimer</i></a>
                                </td>
                            </tr>
                            {% set i = i+1 %}
                        {% endfor %}
                    </table>
                </div>
            </div>

            <div class="row" id="utilisateur">
                <div class="col s12 m-t-30 mt-5">
                    <h5 class="text-primary">Utilisateurs</h5>
                    <table class="mt-4 table-Utilisateurs">
                        <tr>
                            <th>#</th>
                            <th>Email</th>                            
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Adresse</th>
                            <th>Code postal</th>
                            <th>Ville</th>
                            <th>Téléphone</th>                           
                        </tr>

                        {% set i = 1 %}
                        {% for user in users %}
                            <tr>                                
                                <td>{{ i }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.name }}</td>
                                <td>{{ user.firstname }}</td>
                                <td>{{ user.adress }}</td>
                                <td>{{ user.postcode }}</td>
                                <td>{{ user.city }}</td>
                                <td>{{ user.phone}}</td>
                                

                                
                                <td>
                                    <a href=""><i class="material-icons red-text">Supprimer</i></a>
                                </td>
                            </tr>
                            {% set i = i+1 %}
                        {% endfor %}
                    </table>
                </div>       
            </div>
        </div>
    </div>
{% endblock %}