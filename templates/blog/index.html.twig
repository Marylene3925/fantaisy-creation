{# templates/blog/index.html.twig #}

{% extends "base.html.twig" %}

{% block title %}Accueil | {{ parent() }}{% endblock %}

{% block body %}
	{% block content %}
		<div class="container  border-danger border-top">
			<nav class="nav-bijoux mt-3">
				<div > 
					<ul class="d-flex justify-content-between">
						<li><a class="nav-link text-dark" href="#">Bagues</a></li>					
						<li><a class="nav-link text-dark" href="#">Boucles d'oreilles</a></li>
						<li><a class="nav-link text-dark" href="#">Bracelets</a></li>
						<li><a class="nav-link text-dark" href="#">Colliers</a></li>
					</ul>
				</div>
			</nav>			
		</div>
		
		
			
		<div class="container mt-5">
			<div class="row">
				{% for article in articles %}
					<div class="col s12 m4 l3">
						<div class="article-card mb-5">
							<img src="{{ asset('uploads/' ~ article.picture) }}" class="img-article">
							<p class="title-article"><a href="{{ path('article_show', {'id': article.id}) }}">{{ article.title }}</a></p>
							<span class="date">{{ article.publicationDate|date('d/m/Y') }}</span>							
							<span class="tarif ml-11">{{ article.tarif}}&#8364;</span>
							<div>
							<p class="btn-panier btn-primary btn pl-4 mt-3 "> <a href="{{ path('addArticle' , {'id': article.id}) }}">Ajouter au pannier <img class=" img-panier-show pl-4 pr-2 " src="https://img.icons8.com/dotty/50/000000/shopping-bag.png"/><a></p>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	{% endblock %}
{% endblock %}