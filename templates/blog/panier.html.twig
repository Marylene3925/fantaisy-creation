{# templates/admin/panier.html.twig #}

{% extends "base-admin.html.twig" %}

{% block title %}panier | {{ parent() }}{% endblock %}

{% block body %}

    {% block content%}

        <div class="container">
            <div class="d-flex justify-content-between mt-5">
                <div class="col-xl-6">
                    <h2 class="text-primary"> Votre panier</h2>                   

                    {# je transfome mon tableaux items en une longueur et si c'est superieur a 0 j'ai un tableau avec les produits representés #}
                    {% if items | length > 0 %}
                        <table class="table-panier mt-5">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Article</th>
                                    <th>Prix</th>
                                    <th>Quantité</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in items %}
                                    <tr>
                                        <td>{{item.article.picture}}</td>
                                        <td>{{item.article.title}}</td>    
                                        <td>{{item.article.tarif}}</td>
                                        <td>{{item.quantity}}</td>
                                        <td>{{item.article.tarif * item.quantity }}&#8364;</td> 
                                        <td> <a href="{{ path('removeCommande', {'id': item.article.id}) }}">suprimer</a> </td>                                                                            
                                    </tr>                                  
                                {% endfor %}                           
                        
                        {% else %}
                        <p> Votre panier est vide </p>
                    {% endif %}
                    </table>
                </div>
            
                     
                <div class="col-xl-4">
                
                    <h2 class="text-primary text-center"> Récapitulatif de votre commande </h2>                   
                    <div class=" mt-3">
                        <div class="d-flex justify-content-between ">
                            <p class="mt-4 font-weight-bold">Panier : </p>
                            <p class="mt-4 font-weight-bold">{{total}}&#8364;</p>
                        </div>
                        <div>
                            {% for item in items %}
                            <p>{{item.quantity }} articles </p>
                            {% endfor %}    
                        </div>                                                                             
                    </div>
                    <div class="d-flex justify-content-between border-top">
                        <p class="mt-4 font-weight-bold">Frais de livraison </>
                        <p class="mt-4 font-weight-bold">{{fraisDePort}}&#8364;</p>                                                            
                    </div>
                    <div class="d-flex justify-content-between border-top">
                        <p class="mt-4 font-weight-bold">Total </>
                        <p class="mt-4 font-weight-bold">{{total + fraisDePort}}&#8364;</p>                                                            
                    </div>
                    <p><a href="#" class="btn btn-primary btn-commande">Validez la commande</a></p>
                
                </div>      
            </div>
        </div>
    {% endblock %}

{% endblock %}