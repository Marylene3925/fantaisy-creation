{# templates/registration/register.html.twig #}

{% extends 'base.html.twig' %}


{% block title %}Inscription{% endblock %}

{% block content %}
    <div class="container center mt-5">
        <h1>Inscription</h1>
        {{ form_start(registrationForm, {'attr': {'class': 'mt-5'}}) }}
            
            <div class="input-field col s12 m6 l6 offset-m3 offset-l3 mt-5">
                {{ form_widget(registrationForm.name, {'attr': {'placeholder': 'Entrez votre Nom'}}) }}
                <span class="error">{{ form_errors(registrationForm.name) }}</span>
            </div>
            <div class="input-field col s12 m6 l6 offset-m3 offset-l3 mt-5">
                {{ form_widget(registrationForm.firstname, {'attr': {'placeholder': 'Entrez votre Prénom'}}) }}
                <span class="error">{{ form_errors(registrationForm.firstname) }}</span>
            </div>
            <div class="input-field col s12 m6 l6 offset-m3 offset-l3 mt-5">
                {{ form_widget(registrationForm.adress, {'attr': {'placeholder': 'Entrez votre adresse'}}) }}
                <span class="error">{{ form_errors(registrationForm.adress) }}</span>
            </div>
             <div class="input-field col s12 m6 l6 offset-m3 offset-l3 mt-5">
                {{ form_widget(registrationForm.postcode, {'attr': {'placeholder': 'Entrez votre code postale'}}) }}
                <span class="error">{{ form_errors(registrationForm.postcode) }}</span>
            </div>
             <div class="input-field col s12 m6 l6 offset-m3 offset-l3 mt-5">
                {{ form_widget(registrationForm.city, {'attr': {'placeholder': 'Entrez votre ville'}}) }}
                <span class="error">{{ form_errors(registrationForm.city) }}</span>
            </div>
             <div class="input-field col s12 m6 l6 offset-m3 offset-l3 mt-5">
                {{ form_widget(registrationForm.phone, {'attr': {'placeholder': 'Entrez votre numéro de téléphone'}}) }}
                <span class="error">{{ form_errors(registrationForm.phone) }}</span>
            </div>
            <div class="input-field col s12 m6 l6 offset-m3 offset-l3 mt-5">
                {{ form_widget(registrationForm.email, {'attr': {'placeholder': 'Entrez votre adresse email'}}) }}
                <span class="error">{{ form_errors(registrationForm.email) }}</span>                
            </div>
           
            <div class="input-field col s12 m6 l6 offset-m3 offset-l3 mt-5">
                {{ form_widget(registrationForm.username, {'attr': {'placeholder': 'Entrez votre nom d\'utilisateur'}}) }}
                <span class="error">{{ form_errors(registrationForm.username) }}</span>
            </div>

            <div class="input-field col s12 m6 l6 offset-m3 offset-l3 mt-5">
                {{ form_widget(registrationForm.plainPassword, {'attr': {'placeholder': 'Entrez votre mot de passe'}}) }}
                <span class="error">{{ form_errors(registrationForm.plainPassword) }}</span>
            </div>
            <div class="input-field col s12 mt-5">
                <input type="submit" name="" class="btn btn-primary" value="M'inscrire">
            </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}